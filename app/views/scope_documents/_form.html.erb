<%= form_with(model: scope_document, local: true) do |form| %>
  <% if scope_document.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(scope_document.errors.count, "error") %> prohibited this scope_document from being saved:</h2>

      <ul>
      <% scope_document.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :project_name %>
    <%= form.text_field :project_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :document_id %>
    <%= form.text_field :document_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if scope_document.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', scope_document, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if scope_document.persisted? %>
      <%= link_to "Cancel", scope_document, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", scope_documents_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
