<style>
  .scrollable{
    overflow-y: auto;
    max-height: 240px;
  }
</style>



<div class="row">
  <div class="col-sm-6">
    <h1>Documents</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_document_path, class: 'btn btn-primary' do %>
    (+) Create Document
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            <th>Main body</th>
            
      </tr>
    </thead>

    <tbody>
      <% @documents.each do |document| %>
        <%= content_tag :tr, id: dom_id(document), class: dom_class(document) do %>
          
            <td><%= link_to document.name, document %></td>
          

                      <td>
                        <section class="scrollable">
                          <%= document.main_body %>
                        </section>
                      </td>
          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
